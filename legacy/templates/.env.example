# AST Intelligence Hooks - Environment Variables
# Copy this file to .env in your project root and fill in the values
# Note: Never commit .env to version control!

# Repository root (auto-detected if not set)
# REPO_ROOT=/path/to/your/project

# Evidence staleness threshold (seconds)
# Default: 180 (3 minutes)
HOOK_GUARD_EVIDENCE_STALE_THRESHOLD=180

# Git Flow automation settings
# Enable auto-commit during Git Flow automation
AUTO_COMMIT_ENABLED=false

# Enable auto-push during Git Flow automation
AUTO_PUSH_ENABLED=false

# Enable auto-PR creation (disabled by default, requires GitHub CLI)
AUTO_PR_ENABLED=false

# Intelligent severity evaluation
# Enable/disable intelligent severity upgrades/downgrades
ENABLE_INTELLIGENT_SEVERITY=true

# Pre-commit mode
# Set to 'true' when running in pre-commit hook context
# PRE_COMMIT=false

# Audit mode settings
# Only analyze staged files
# AUDIT_STAGED_ONLY=false

# Strict mode: block on any violation (not just CRITICAL/HIGH)
# AUDIT_STRICT=false

# Only block on CRITICAL and HIGH violations
# AUDIT_CRITICAL_HIGH_ONLY=false

# Bypass hook (emergency use only)
# WARNING: Only use in emergencies!
# GIT_BYPASS_HOOK=false

# Claude/Anthropic project directory (if using Claude integration)
# CLAUDE_PROJECT_DIR=/path/to/claude/project

# Auto-refresh guards
# HOOK_GUARD_AUTO_REFRESH=true

# Workspace root (for MCP servers, usually same as REPO_ROOT)
# WORKSPACE_ROOT=/path/to/workspace
