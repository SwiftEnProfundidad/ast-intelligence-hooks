{
  "version": "1.0.0",
  "description": "AST rule exclusions for third-party code and build artifacts. Customize this file for your project.",
  "exclusions": {
    "paths": {
      "node_modules": true,
      "dist": true,
      ".next": true,
      "coverage": true,
      ".audit_tmp": true,
      "build": true,
      ".build": true,
      "checkouts": true,
      "Pods": true,
      "DerivedData": true,
      ".git": true,
      ".cache": true
    },
    "rules": {
      "ios.force_unwrapping": {
        "reason": ""
      },
      "common.docs.missing_readme": {
        "excludePatterns": [
          "**/node_modules/**",
          "**/dist/**",
          "**/build/**"
        ],
        "reason": "Third-party code doesn't need README"
      }
    }
  },
  "severityOverrides": {
    "common.docs.missing_readme": "LOW",
    "common.style.line_length": "LOW"
  }
}