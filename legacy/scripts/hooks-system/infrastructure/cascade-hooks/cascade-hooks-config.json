{
    "description": "AST Intelligence Cascade Hooks - 100% enforcement of code quality rules",
    "version": "1.0.0",
    "hooks": {
        "pre_write_code": [
            {
                "command": "bash \"${workspaceFolder}/scripts/hooks-system/infrastructure/cascade-hooks/run-hook-with-node.sh\" pre-write-code-hook.js",
                "show_output": true,
                "timeout_ms": 10000
            }
        ],
        "post_write_code": [
            {
                "command": "bash \"${workspaceFolder}/scripts/hooks-system/infrastructure/cascade-hooks/run-hook-with-node.sh\" post-write-code-hook.js",
                "show_output": false,
                "timeout_ms": 5000
            }
        ]
    }
}
